<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Thanh tiêu đề -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clipboard Manager"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp" />

    <!-- Nút thao tác -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="4dp">

        <Button
            android:id="@+id/btnRequestAccessibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grant Accessibility" />

        <Button
            android:id="@+id/btnToggleFloat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toggle Floating" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear All" />
    </LinearLayout>

    <!-- Empty view cho danh sách Copied -->
    <TextView
        android:id="@+id/tvEmptyCopied"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No copied items"
        android:gravity="center"
        android:visibility="gone"
        android:padding="16dp" />

    <!-- Danh sách Copied -->
    <ListView
        android:id="@+id/lvCopied"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

    <!-- Empty view cho danh sách Pinned -->
    <TextView
        android:id="@+id/tvEmptyPinned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No pinned items"
        android:gravity="center"
        android:visibility="gone"
        android:padding="16dp" />

    <!-- Danh sách Pinned -->
    <ListView
        android:id="@+id/lvPinned"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

</LinearLayout>
