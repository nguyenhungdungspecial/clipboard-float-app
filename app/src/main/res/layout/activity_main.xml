<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Thanh tiêu đề -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clipboard Manager"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp" />

    <!-- Empty view cho danh sách Copied -->
    <TextView
        android:id="@+id/empty_view_copied"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No copied items"
        android:gravity="center"
        android:visibility="gone"
        android:padding="16dp" />

    <!-- Danh sách Copied -->
    <ListView
        android:id="@+id/listViewCopied"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

    <!-- Empty view cho danh sách Pinned -->
    <TextView
        android:id="@+id/empty_view_pinned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No pinned items"
        android:gravity="center"
        android:visibility="gone"
        android:padding="16dp" />

    <!-- Danh sách Pinned -->
    <ListView
        android:id="@+id/listViewPinned"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

</LinearLayout>
