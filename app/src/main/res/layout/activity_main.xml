<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/label_copied"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_copied"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <ListView
        android:id="@+id/list_copied"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="4dp"
        android:listSelector="@android:color/darker_gray"
        android:emptyView="@+id/empty_copied"/>

    <TextView
        android:id="@+id/empty_copied"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/empty_list"
        android:gravity="center"
        android:padding="8dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <Button
            android:id="@+id/btn_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_pin" />

        <Button
            android:id="@+id/btn_unpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/btn_unpin" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/btn_clear" />
    </LinearLayout>

    <TextView
        android:id="@+id/label_pinned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_pinned"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <ListView
        android:id="@+id/list_pinned"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="4dp"
        android:listSelector="@android:color/darker_gray"
        android:emptyView="@+id/empty_pinned"/>

    <TextView
        android:id="@+id/empty_pinned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/empty_list"
        android:gravity="center"
        android:padding="8dp"
        android:visibility="gone"/>
</LinearLayout>
